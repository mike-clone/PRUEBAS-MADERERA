<div class="container">
    <br><h2 style="text-align: center">LISTADO DE CLIENTES</h2>
    <hr>
    <!-- Ordenar -->
    <a onclick="return Ordenar(this)" aria-current="page" type="button" class="btn btn-primary btn-lg" id="ASC" th:href="@*@{productoAsc}*@#"><i class="bi bi-sort-up"></i></a>
    <a onclick="return Ordenar(this)" aria-current="page" type="button" class="btn btn-secondary btn-lg" id="DESC" th:href="@*@{productoDesc}*@#"><i class="bi bi-sort-down"></i></a>
    <hr>
    <!-- Buscar -->
    <form class="d-flex mb-4" role="search" action="/Cliente/Listar" method="POST" id="bCliente">
        <input class="form-control me-2" type="search" placeholder="Buscar" name="dato" aria-label="Search">
        <button onclick="return Buscar('bCliente')" class="btn btn-outline-success" type="submit">Buscar</button>
    </form>
    @*<h2>@ViewBag.Mensaje</h2>
        <h2>@ViewBag.Lista</h2>*@
    <!-- Listar -->
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>
                   #
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    DNI
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    Provincia
                </th>
                <th>
                    Eliminar
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RazonSocial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ubigeo.Provincia)
                    </td>
                    @*<td>
                            <button class="btn btn-warning" type="button">
                                <i class="bi bi-pencil-square"></i>
                                @Html.ActionLink("Edit", "EditarProducto", new { idprod = item.IdCliente })
                            </button>
                        </td>*@
                    <td>
                        <a onclick="return Eliminar(this)" href="/Cliente/EliminarCliente?idP=@item.IdCliente" class="btn btn-danger" type="button"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        <tbody>
    </table>
