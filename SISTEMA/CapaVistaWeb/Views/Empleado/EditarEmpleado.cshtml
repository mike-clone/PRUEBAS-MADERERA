            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            @Html.LabelFor(model => model.EstEmpleado, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.EstEmpleado)
                    @Html.ValidationMessageFor(model => model.EstEmpleado, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <br>
        <button type="button" class="btn btn-warning">
            @Html.ActionLink("Regresar", "Listar")
