<div class="container">
    <br><h2 style="text-align: center">DETALLE</h2>
    @{
        var idVenta = Model.FirstOrDefault()?.Venta.IdVenta;
        double total = 0;
    }
    <h3>Pedido No. @idVenta</h3>
    <br />
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>
                    #
                </th>
                <th>
                    Producto
                </th>
                <th>
                    Tipo
                </th>
                <th>
                    Longitud
                </th>
                <th>
                    Diametro
                </th>
                <th>
                    Precio x Un
                </th>
                <th>
                    Cantidad
                </th>
                <th>
                    Subtotal
                </th>
            </tr>
        </thead>
        @{ 
            int count = 0;
        }
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @{ 
                            count++;
                        }
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Tipo.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Longitud)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Diametro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.PrecioVenta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubTotal)
                    </td>
                </tr>
                {
                    total += item.SubTotal;
                }
            }
        </tbody>
    </table>
    <br />
    <div class="container d-flex justify-content-end">
        <h5 class="me-5">TOTAL</h5>
        <h5>S/.@total</h5>
    </div>
</div>
