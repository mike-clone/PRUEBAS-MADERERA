<br>
<br>
<br>
<br>
<div class="container">
    <br><h2 style="text-align: center">AGREGAR AL CARRITO</h2>
    <!-- Agregar producto -->

    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#ModInsertarDetalle"> agregar al carrito<i class="bi bi-dropbox"></i></button>
    <hr>
    <!-- Ordenar -->
    <a onclick="return Ordenar(this)" aria-current="page" type="button" class="btn btn-primary btn-lg" id="ASC" th:href="@*@{productoAsc}*@#"><i class="bi bi-sort-up"></i></a>
    <a onclick="return Ordenar(this)" aria-current="page" type="button" class="btn btn-secondary btn-lg" id="DESC" th:href="@*@{productoDesc}*@#"><i class="bi bi-sort-down"></i></a>
    <hr>

    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    NOMBRE
                </th>
                <th>
                    METRAJE
                </th>
                <th>
                    PRECIO
                </th>
                <th>
                    TIPO
                </th>
                <th>
                    SUBTOTAL
                </th>
                <th>ELIMINAR</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.IdProducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Longitud)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.PrecioVenta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Tipo.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubTotal)
                    </td>
                    <td>
                        <a onclick="return Eliminar(this)" href="/Venta/EliminarDetalle?ids=@item.Producto.IdProducto" class="btn btn-danger" type="button"><i class="bi bi-trash"></i></a>
                    </td>

                </tr>
            }
        <tbody>
    </table>
    <br>
    <form action="/Venta/CrearVenta" method="POST">
        <button type="submit" class="btn btn-warning">Confirmar Compra</button>
    </form>

</div>
<!--Agregar Producto-->
<div class="modal" tabindex="-1" id="ModInsertarDetalle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form action="/Venta/LlenarDetalle" method="POST" id="det">
                <div class="modal-header ">
                    <h5 class="modal-title">Ingresar Producto</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-floating mb-3">
                        <div class="form-group mb-3" id="prod">
                            Producto:
                            <div class="col-md-10">
                                @Html.DropDownList("pProd", (SelectList)ViewBag.listaproducto, "Seleccionar")
                            </div>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="pCantidad" id="cantidad" placeholder="Cantidad" required>
                        <label for="floatingInput">Cantidad</label>
                    </div>
                    <imput type="hiden" id="vacio" value="vacio"></imput> @*el script que creamos nesecita validar 3 id por eso inventamos uno*@
                </div>
                <div class="modal-footer">
                    <button onclick="return Registrar('prod', 'cantidad', 'vacio', 'det')" type="submit" class="btn btn-dark">Registrar</button>
                    <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </form>
        </div>
    </div>
</div>
