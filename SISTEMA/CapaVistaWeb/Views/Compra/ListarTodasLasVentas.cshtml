<div class="container">
    <br><h2 style="text-align: center">MIS COMPRAS</h2>

    <!-- Ordenar -->
    <a onclick="return Ordenar(this)" aria-current="page" type="button" class="btn btn-primary btn-lg" id="ASC" th:href="@*@{productoAsc}*@#"><i class="bi bi-sort-up"></i></a>
    <a onclick="return Ordenar(this)" aria-current="page" type="button" class="btn btn-secondary btn-lg" id="DESC" th:href="@*@{productoDesc}*@#"><i class="bi bi-sort-down"></i></a>
    <hr>
    <!-- Buscar -->
    <form class="d-flex mb-4" role="search" action="#" method="POST" id="Bproveedor">
        <input class="form-control me-2" type="search" placeholder="Buscar" name="dato" aria-label="Search">
        <button onclick="return Buscar('Bproveedor')" class="btn btn-outline-success" type="submit">Buscar</button>
    </form>
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>
                    #
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th>
                    Cliente
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente.Correo)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    Detalle
                </th>
            </tr>
        </thead>
        @{
            int count = 0;
        }
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @{
                            count++;
                        }
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>

                    <td>
                        <a class="btn btn-info bi bi-stickies-fill" type="button" href="../Venta/MostrarDetalle?idv=@item.IdVenta">  </a>
        
                    </td>
                </tr>
            }
        </tbody>
    </table>
