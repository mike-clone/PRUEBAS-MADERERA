<div class="container">
    <br><h2 style="text-align: center">MIS COMPRAS</h2>

    <!-- Ordenar -->
    <a onclick="return Ordenar(this)" aria-current="page" type="button" class="btn btn-primary btn-lg" id="ASC" th:href="@*@{productoAsc}*@#"><i class="bi bi-sort-up"></i></a>
    <a onclick="return Ordenar(this)" aria-current="page" type="button" class="btn btn-secondary btn-lg" id="DESC" th:href="@*@{productoDesc}*@#"><i class="bi bi-sort-down"></i></a>
    <hr>
    <!-- Buscar -->
    <form class="d-flex mb-4" role="search" action="#" method="POST" id="Bproveedor">
        <input class="form-control me-2" type="search" placeholder="Buscar" name="dato" aria-label="Search">
        <button onclick="return Buscar('Bproveedor')" class="btn btn-outline-success" type="submit">Buscar</button>
    </form>
    <div class="container">
        <br><h2 style="text-align: center">DETALLE</h2>
        @{
            var idCompra = Model.FirstOrDefault()?.Compra.IdCompra;
            double total = 0;
        }
        <h3>Pedido No. @idCompra</h3>
        <br />
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Producto
                    </th>
                    <th>
                        Tipo
                    </th>
                    <th>
                        Longitud
                    </th>
                    <th>
                        Diametro
                    </th>
                    <th>
                        Proveedor
                    </th>
                    <th>
                        Desc
                    </th>
                    <th>
                        Precio x Un
                    </th>
                    <th>
                        Cantidad
                    </th>
                    <th>
                        Subtotal
                    </th>
                </tr>
            </thead>
            @{
                int count = 0;
            }
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @{
                                count++;
                            }
                            @count
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProveedorProducto.Producto.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProveedorProducto.Producto.Tipo.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProveedorProducto.Producto.Longitud)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProveedorProducto.Producto.Diametro)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProveedorProducto.Proveedor.RazonSocial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProveedorProducto.Proveedor.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProveedorProducto.PrecioCompra)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cantidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subtotal)
                        </td>
                    </tr>
                    {
                        total += item.Subtotal;
                    }
                }
            </tbody>
        </table>
        <br />
        <div class="container d-flex justify-content-end">
            <h5 class="me-5">TOTAL</h5>
            <h5>S/.@total</h5>
        </div>
    </div>
</div>
