<div class="container">
    <br><h2 style="text-align: center">LISTADO DE PROVEDDORES</h2>
    <!-- Agregar producto -->

    <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#ModInsertarProveedor"><i class="bi bi-plus-square"></i> Agregar Proveedor</button>
    <hr>
    <!-- Ordenar -->
    <a onclick="return Ordenar(this)" aria-current="page" type="button" class="btn btn-primary btn-lg" id="ASC" th:href="@*@{productoAsc}*@#"><i class="bi bi-sort-up"></i></a>
    <a onclick="return Ordenar(this)" aria-current="page" type="button" class="btn btn-secondary btn-lg" id="DESC" th:href="@*@{productoDesc}*@#"><i class="bi bi-sort-down"></i></a>
    <hr>
    <!-- Buscar -->
    <form class="d-flex mb-4" role="search" action="Listar" method="POST" id="Bproveedor">
        <input class="form-control me-2" type="search" placeholder="Buscar" name="dato" aria-label="Search">
        <button onclick="return Buscar('Bproveedor')" class="btn btn-outline-success" type="submit">Buscar</button>
    </form>

    <table class="table">
        <thead class="table-dark">
            <tr>

                <th>
                    #
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Ruc
                </th>
                <th>
                    Correo
                </th>
                <th>
                    Telefono
                </th>
                <th>
                    Descripcion
                </th>
                <th>
                    Provincia
                </th>
                @*<th>
                        PRIVICIA
                    </th>
                    <th>
                        DISTRITO
                    </th>*@
                <th>
                    Estado
                </th>
                <th>
                    Detalles
                </th>
                <th>
                    Editar
                </th>
                <th>
                    Eliminar
                </th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdProveedor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RazonSocial, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ruc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ubigeo.Provincia)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Ubigeo.Provincia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ubigeo.Distrito)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.EstProveedor)
                    </td>
                    <td>
                        <button class="btn btn-info bi bi-stickies-fill" type="button">
                            @Html.ActionLink("Detalle", "MostrarDetalle", new { idp = item.IdProveedor })
                        </button>
                    </td>
                    <td>
                        <button class="btn btn-warning bi bi-pencil-square" type="button">
                            @Html.ActionLink("Edit", "EditarProveedor", new { idprov = item.IdProveedor })

                        </button>
                    </td>
                    <td>
                        <a onclick="return Eliminar(this)" href="/Proveedor/EliminarProveedor?idc=@item.IdProveedor" class="btn btn-danger" type="button"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
