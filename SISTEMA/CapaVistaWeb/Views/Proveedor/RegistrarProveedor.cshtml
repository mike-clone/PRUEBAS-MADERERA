<section class="container">
    <h1 class="modal-title">Ingresar Datos</h1>
    <form class="row g-3 needs-validation" novalidate action="/Proveedor/RegistrarProveedor" method="POST">

        <div class="col-md-6">
            <label for="validationCustom01" class="form-label">Nombre</label>
            <input type="text" id="nombre" name="nombre" placeholder="Enter your full name" class="form-control" required>
            <div class="invalid-feedback">
                Please choose  full name.
            </div>
        </div>
        <div class="col-md-6">
            <label for="inputRuc" class="form-label">Ruc</label>
            <input type="number" id="ruc" name="ruc" class="form-control" placeholder="Enter your number ruc" required/>
            <div class="invalid-feedback">
                please choose a number ruc.
            </div>
        </div>
        <div class="col-md-6">
            <label for="inputTelefono" class="form-label">Telefono</label>
            <input type="number" id="telefono" name="telefono" placeholder="Enter your phone" class=" form-control" required>
            <div class="invalid-feedback">
                Please choose a phone.
            </div>
        </div>
        <div class="col-md-6">
            <label for="inputEmail4" class="form-label">Email</label>
            <input type="text" class="form-control" id="inputEmail4" name="email" placeholder="Enter your Email address" required>
            <div class="invalid-feedback">
                Please choose a Email.
            </div>
        </div>
        <div class="col-md-6">
            <label for="inputdescription" class="form-label"> </label>
                <input type="text" name="description" id="description" class="form-control"placeholder=" Enter your description" required>
                <div class="invalid-feedback">
                    please choose a description.
                </div>
        </div>
        <div class="col-md-3">
            <label for="validationCustom04" class="form-label">Ubicacion relativa</label>
            @Html.DropDownList("ubigeo", (SelectList)ViewBag.listaUbigeo, "Seleccionar", new { @class = "form-select", required = "required" })
            <div class="invalid-feedback">
                Please select a valid province.
            </div>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">submit</button>
        </div>
    </form>
</section>