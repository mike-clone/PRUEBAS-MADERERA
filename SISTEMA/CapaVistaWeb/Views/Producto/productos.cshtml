<!-- ======= Contenido ======= -->
<br>
<br>
<br>
<br>
<div class="container">
    <br><h2 style="text-align: center">LISTADO DE PRODUCTOS</h2>

    <hr>
    <!-- Ordenar -->
    <a onclick="return Ordenar(this)" aria-current="page" type="button" class="btn btn-primary btn-lg" id="ASC" th:href="@*@{productoAsc}*@#"><i class="bi bi-sort-up"></i></a>
    <a onclick="return Ordenar(this)" aria-current="page" type="button" class="btn btn-secondary btn-lg" id="DESC" th:href="@*@{productoDesc}*@#"><i class="bi bi-sort-down"></i></a>
    <hr>
    <!-- Buscar -->
    <form class="d-flex mb-4" role="search" action="Productos" method="POST" id="Bproductoc">
        <input class="form-control me-2" type="search" placeholder="Buscar" name="data" aria-label="Search">
        <button onclick="return Buscar('Bproductoc')" class="btn btn-outline-success" type="submit">Buscar</button>
    </form>
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    NOMBRE
                </th>
                <th>
                    METRAJE
                </th>
                <th>
                    PRECIO
                </th>
                <th>
                    STOCK
                </th>
                <th>
                    TIPO
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.IdProducto)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Longitud)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PrecioVenta)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Stock)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tipo.Nombre)
    </td>

</tr>            }
        <tbody>
    </table>
</div>





